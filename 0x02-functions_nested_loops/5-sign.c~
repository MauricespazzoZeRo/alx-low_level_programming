#include "main.h"

/**
 * print_sign - Print the sign ofa number
 *
 * @n: reps. mumbers
 *
 * Return: 1 for +ve if n > 0, -1 for -ve if n < 0, 0 for 0 if n = 0
 */
int print_sign(int n)
{
	int n;

	if (n > 0)
	{
		_putchar('+');
		return (1);
	}
	else if (n == 0)
	{
		_putchar('0');
		return (0);
	}
	else
	{
		_putchar('-');
		return (-1);
	}
}
