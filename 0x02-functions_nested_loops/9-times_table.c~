#include "main.h"
#include <stdio.h>

/**
 * times_table - prints the multiplication table for 0 to 9
 */
void times_table(void)
{
	int i, j, product;

	for (i = 0; i <= 9; i++)
	{
		for (j = 0; j <= 9; j++)
		{
			product = i * j;
			if (j == 0)
			{
				_putchar(',');
				_putchar(product + '0');
			}
			else if (product < 10)
			{
				_putchar(',');
				_putchar(product + '0');
			}
			else
			{
				_putchar(',');
				_putchar(product + '0');
			}
		}
	  _putchar('\n');
	}
}
